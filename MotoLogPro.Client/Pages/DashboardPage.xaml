<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MotoLogPro.Client.ViewModels"
             xmlns:models="clr-namespace:MotoLogPro.Shared.DTOs;assembly=MotoLogPro.Shared"
             x:Class="MotoLogPro.Client.Pages.DashboardPage"
             Title="Garage Officina"
             BackgroundColor="#F5F5F5">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Esci" Command="{Binding LogoutCommand}" Order="Primary" Priority="1" />
        <ToolbarItem Text="Nuova Moto" Order="Primary" Priority="0" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto, *">

        <VerticalStackLayout Grid.Row="0" BackgroundColor="#2196F3" Padding="20">
            <Label Text="Benvenuto in MotoLogPro" TextColor="White" FontSize="18" FontAttributes="Bold"/>
            <Label Text="Seleziona un veicolo per iniziare" TextColor="#E3F2FD" FontSize="14"/>
        </VerticalStackLayout>

        <ActivityIndicator Grid.Row="1" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" 
                           Color="#2196F3" HorizontalOptions="Center" VerticalOptions="Center"/>

        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Vehicles}" 
                        Margin="10"
                        IsVisible="{Binding IsNotBusy}">

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" 
                                 Span="{OnIdiom Phone=1, Tablet=2, Desktop=3}" 
                                 VerticalItemSpacing="10" 
                                 HorizontalItemSpacing="10"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:VehicleDto">
                    <Border StrokeShape="RoundRectangle 15" 
                            StrokeThickness="0"
                            BackgroundColor="White"
                            Padding="0"
                            HeightRequest="160">

                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="2,2" Radius="5" Opacity="0.1"/>
                        </Border.Shadow>

                        <Grid RowDefinitions="*, Auto" ColumnDefinitions="Auto, *">
                            <BoxView Grid.RowSpan="2" Grid.Column="0" WidthRequest="10" Color="#2196F3"/>

                            <VerticalStackLayout Grid.Column="1" Grid.Row="0" Padding="15" Spacing="5">
                                <Label Text="{Binding Brand}" TextColor="#757575" FontSize="12" TextTransform="Uppercase"/>
                                <Label Text="{Binding Model}" TextColor="#212121" FontSize="20" FontAttributes="Bold" LineBreakMode="TailTruncation"/>
                                <Label Text="{Binding LicensePlate}" TextColor="#424242" FontSize="16" FontAttributes="Bold" />
                            </VerticalStackLayout>

                            <Grid Grid.Row="1" Grid.Column="1" ColumnDefinitions="*, Auto" Padding="15,0,15,10">
                                <Label Grid.Column="0" Text="{Binding OwnerName}" TextColor="#9E9E9E" FontSize="12" VerticalOptions="End"/>
                                <Label Grid.Column="1" Text="{Binding Year}" TextColor="#2196F3" FontAttributes="Bold" FontSize="18" VerticalOptions="End"/>
                            </Grid>
                        </Grid>

                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                    <Label Text="ðŸï¸" FontSize="60" HorizontalOptions="Center"/>
                    <Label Text="Nessuna moto in officina" TextColor="Gray" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

        </CollectionView>
    </Grid>

</ContentPage>